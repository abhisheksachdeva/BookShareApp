<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdsmdg.bookshareapp.BSA">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.LoginActivity"
            android:label="Login"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.SearchResultsActivity"
            android:label="Search">
            <intent-filter>
                <action android:name="android.intent.action.SEARCHRESULTS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.MainActivity"
            android:label="Campus Books"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize"/>
        <activity android:name="com.sdsmdg.bookshareapp.BSA.ui.SignupActivity" />
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.MyBooks"
            android:label="My Books" />
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.BookDetailsActivity"
            android:label="Book Details" />
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.UserProfile"
            android:label="User Details" />
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.MyProfile"
            android:excludeFromRecents="true"
            android:label="My Profile"
            android:launchMode="singleTop" />
        <activity android:name="com.sdsmdg.bookshareapp.BSA.ui.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.EditProfileActivity"
            android:label="Edit your details"
            android:parentActivityName="com.sdsmdg.bookshareapp.BSA.ui.MyProfile" />
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.ChangePasswordActivity"
            android:label="Change Password" />
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.GuestActivity"
            android:label="Campus Books" />
        <activity android:name="com.sdsmdg.bookshareapp.BSA.ui.UserSearchActivity"
            android:label="Search users" />
    </application>

</manifest>